@model BagLib.Models.Country

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Country</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Currencies)
        </dt>
        <dd class = "col-sm-10 coin">
            @foreach (var c in Model.Currencies)
            {   
                @Html.Raw("Symbol: ")
                @Html.DisplayFor(m => c.Symbol)
                <br />
                @Html.Raw("Moneda: ")
                @Html.DisplayFor(m => c.Name)
                <br />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CountryId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>